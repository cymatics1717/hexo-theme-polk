body {
  margin: 0;
}

html, body, .container {
  height: 100%;
  font-family: Hiragino Sans GB, Microsoft YaHei, WenQuanYi, Airal, sans-serif;
}

.container {
  max-width: 840px;
  margin: 0 auto;
}

a {
.link {color:#00F;text-decoration:none;}	
.visited {color:#0F0;text-decoration:none;}
.hover {color:#00A;text-decoration:underline;}	
#.active {color:#00F;text-decoration:underline;}
}

.home {
  display: table;
  width: 100%;
  height: 100%;

  .info {
    display: table-cell;
    vertical-align: middle;
    text-align: center;

    .logo {
      font-size: 3em;
      font-weight: bold;
    }

    .subtitle {
      font-size: 16px;
      color: gray;
    }

    .sns {
      margin: 1em auto;

      a {
        width: 50px;
        color: gray;
        display: inline-block;

        &:hover {
          color: #00F;
        }
      }
    }

    footer {
      border: 0;
      color: #000;
      padding: 0;
    }
  }
}

.page {
  margin: 0 20px;
  margin-bottom: 2em;
  
  p {
    line-height: 1.5em;
  }
}

@import "_partial/header";
@import "_partial/post";
@import "_partial/archive";
@import "_partial/paginator";
@import "_partial/footer";
